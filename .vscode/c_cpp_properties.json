{
    "configurations": [
        {
            "name": "Linux/macOS (GCC/Clang)",
            "includePath": [
                "${workspaceFolder}/**", // Включает все подпапки в рабочем пространстве
                "${workspaceFolder}/include",
                "${workspaceFolder}/include/**", // Для Squidl.h и SquidlConfig.h
                //"${workspaceFolder}/include/Squidl", // Для внутренних инклудов Squidl, типа Squidl/core/UIContext.h
                //"${workspaceFolder}/include/Squidl/**",
                // Пути к заголовкам SDL2. Адаптируй их под свою систему!
                // Примеры для macOS Homebrew:
                "/opt/homebrew/include/SDL2",

            ],
            "defines": [
                "SQUIDL_EXPORTS" // Определяем этот макрос для IntelliSense, если ты собираешь DLL/Shared Lib на Windows,
                                 // но он также не повредит и на других платформах для IntelliSense
            ],
            "compilerPath": "/usr/bin/clang", // Или "/usr/bin/g++" на Linux, или твой путь к clang/g++
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-clang-arm64" // Или "linux-gcc-x64", "macos-clang-x64" и т.д.
